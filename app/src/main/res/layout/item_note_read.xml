<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/item_note"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/common_selector"
  android:orientation="vertical">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ln_item"
    android:orientation="vertical">
    <android.support.v7.widget.AppCompatTextView
      android:id="@+id/note_text_title"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:text="@string/app_name"
      android:textSize="18sp"
      />
    <android.support.v7.widget.AppCompatTextView
      android:id="@+id/note_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:maxLines="1"
      android:text="@string/app_name"
      />

    <android.support.v7.widget.AppCompatTextView
      android:id="@+id/time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:text="@string/app_name"
      />
    <android.support.v7.widget.AppCompatTextView
      android:id="@+id/repeat_details"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:text="@string/app_name"
      />

  </LinearLayout>
  <ImageView android:layout_width="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:src="@drawable/ic_notifications_off_black_24dp"
    android:layout_centerVertical="true"
    android:id="@+id/active_image"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_below="@+id/ln_item"
    android:background="@color/lightbluedivider">
  </LinearLayout>

</RelativeLayout>