<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  <data>
    <variable
      name="activity"
      type="com.gideondev.jotta.feature.main.view.MainActivity"
      />
    <variable
      name="presenter"
      type="com.gideondev.jotta.feature.main.presenter.view.MainPresenter"
      />
  </data>
  <android.support.design.widget.NavigationView
    android:id="@+id/nav_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white"
      android:orientation="vertical">

      <include
        android:id="@+id/head_main"
        layout="@layout/header_main"/>

      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:padding="10dp"
        android:background="@color/greencolorDivider"
        android:visibility="visible"/>

      <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrl_drawer_first_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
          android:id="@+id/ln_menu_first"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/common_selector"
          android:orientation="vertical"
          >

          <LinearLayout
            android:id="@+id/ln_my_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/common_selector"
            android:onClick="@{()->activity.SetDefaultFolderMyNote()}"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:tint="@color/black"
              android:src="@drawable/ic_folder_grey_400_24dp"/>

            <android.support.v7.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
              android:layout_gravity="center"
              android:text="@string/my_note"
              android:textAppearance="@style/TextPrimary"
              android:textSize="16sp"
              />

            <android.support.v7.widget.AppCompatTextView
              android:id="@+id/default_note_count"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="end"
              android:text="@{presenter.GetDefaultNoteCount()}"
              android:textAppearance="@style/TextPrimary"
              android:textSize="16sp"/>

          </LinearLayout>

          <android.support.v7.widget.RecyclerView
            android:id="@+id/rec_folder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="true"
            android:nestedScrollingEnabled="false"
            app:layoutManager="LinearLayoutManager">
          </android.support.v7.widget.RecyclerView>

          <View
            android:id="@+id/view_div_mobile"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/greencolorDivider"
            android:visibility="visible"/>

          <LinearLayout
            android:id="@+id/ln_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="10dp"
            android:background="@drawable/common_selector"

            android:onClick="@{()->presenter.OpenSettingsScreen()}"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:src="@drawable/ic_settings_grey_600_24dp"/>

            <android.support.v7.widget.AppCompatTextView
              android:id="@+id/appCompatTextView2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
              android:layout_gravity="center"
              android:text="@string/settings"
              android:textAppearance="@style/TextPrimary"
              android:textSize="16sp"
              />

          </LinearLayout>

          <LinearLayout
            android:id="@+id/ln_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="@{()->activity.CustomTheme()}"
            android:orientation="horizontal"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:src="@drawable/ic_invert_colors_black_24dp"/>

            <android.support.v7.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
              android:layout_gravity="center"
              android:text="@string/change_theme"
              android:textAppearance="@style/TextPrimary"
              android:textSize="16sp"/>

          </LinearLayout>


          <LinearLayout
            android:id="@+id/ln_recycle_bin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/common_selector"
            android:onClick="@{()->activity.SetShowTrashNote()}"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:tint="@color/black"
              android:src="@drawable/ic_delete_grey_600_24dp"/>

            <android.support.v7.widget.AppCompatTextView
              android:id="@+id/appCompatTextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
              android:layout_gravity="center"
              android:text="@string/recycle_bin"
              android:textAppearance="@style/TextPrimary"
              android:textSize="16sp"/>

            <android.support.v7.widget.AppCompatTextView
              android:id="@+id/trash_note_count"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="end"
              android:text="@{presenter.GetRecycleNoteCount()}"
              android:textAppearance="@style/TextPrimary"
              android:textSize="16sp"/>

          </LinearLayout>

          <LinearLayout
            android:id="@+id/ln_rate_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/common_selector"

            android:onClick="@{()->presenter.rateThisApp()}"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:src="@drawable/ic_star_border_black_24dp"/>

            <android.support.v7.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
              android:layout_gravity="center"
              android:text="@string/rate_app"
              android:textAppearance="@style/TextPrimary"
              android:textSize="16sp"
              />

          </LinearLayout>

          <LinearLayout
            android:id="@+id/ln_back_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/common_selector"

            android:onClick="@{()->presenter.backUpToSdcard()}"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:src="@drawable/ic_backup_black_24dp"/>

            <android.support.v7.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
              android:layout_gravity="center"
              android:text="@string/back_up"
              android:textAppearance="@style/TextPrimary"
              android:textSize="16sp"
              />

          </LinearLayout>


          <LinearLayout
            android:id="@+id/ln_restore_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/common_selector"

            android:onClick="@{()->presenter.restoreToDb()}"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:src="@drawable/ic_restore_black_24dp"/>

            <android.support.v7.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
              android:layout_gravity="center"
              android:text="@string/restore"
              android:textAppearance="@style/TextPrimary"
              android:textSize="16sp"
              />

          </LinearLayout>
          <LinearLayout
            android:id="@+id/ln_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/common_selector"

            android:onClick="@{()->presenter.logUserOut()}"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:tint="@color/black"
              android:src="@mipmap/logout"/>

            <android.support.v7.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
              android:layout_gravity="center"
              android:text="@string/logout"
              android:textAppearance="@style/TextPrimary"
              android:textSize="16sp"
              />

          </LinearLayout>


          <LinearLayout
            android:id="@+id/ln_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/common_selector"

            android:onClick="@{()->presenter.login()}"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:src="@drawable/ic_account_circle_black_24dp"/>

            <android.support.v7.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20dp"
              android:layout_gravity="center"
              android:text="@string/register"
              android:textAppearance="@style/TextPrimary"
              android:textSize="16sp"
              />

          </LinearLayout>



        </LinearLayout>
      </android.support.v4.widget.NestedScrollView>

    </LinearLayout>


  </android.support.design.widget.NavigationView>
</layout>
